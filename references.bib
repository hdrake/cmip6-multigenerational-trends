	journal = {Journal of Applied Meteorology and Climatology},
	author = {Christy, John R. and McNider, Richard T.},
	year = {2016},
	keywords = {Climate records, Model evaluation/performance, Surface observations, Surface temperature},
	pages = {811--826}
}

