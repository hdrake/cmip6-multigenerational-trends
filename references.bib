	volume = {91},
	issn = {01480227},
	url = {http://adsabs.harvard.edu/cgi-bin/nph-data_query?bibcode=1986JGR....91.5037G&link_type=EJOURNAL\npapers3://publication/doi/10.1029/JC091iC04p05037},
